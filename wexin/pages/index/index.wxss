/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.img {
  width: 100%;
  height: 250px;
}

.img image {
  width: 100%;
  /* height: 100%; */
}

.usermotto {
  margin-top: 200px;
}

.gird {
  float: left;
  width: 25%;
  position: relative;
  margin-bottom: 20px;
}

.gird-img {
  width: 48px;
  height: 48px;
  text-align: center;
  margin: 0 auto;
  /* border-radius: 50%; */
}

.gird-img image {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 50%;
  border: 1px solid black;
}

.gird-img text {
  font-size: 10px;
  background: black;
  display: block;
  width: 50px;
  line-height: 10px;
  height: 10px;
  color: white;
  border-radius: 50px;
  position: absolute;
  bottom: -5px;
}

.goods {
  float: left;
  width: 50%;
  height: 150px;
  margin-top: 10px;
}

.goods image {
  margin: 0 auto;
  width: 80%;
  height: 100px;
  border-radius: 20px;
  border: 1px solid #aaa;
  display: block;
}

.goods text {
  display: block;
  font-size: 12px;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.sort {
  margin: 20px 0px;
}
