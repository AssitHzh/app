/* 商品列表 */
.goods_list{
    height: 100px;
    padding-left:100px;
    position: relative;
}
.left {
    position: absolute;
    top:10px;
    left: 10px;
}

.left image{
    width: 80px;
    height: 80px;
}

.right{
    padding:10px 0;
    height: 80px;
    /* overflow: hidden; */
}
.goods_name{
    font-size: 14px
}
.goods_address{
    color:#929292;
    font-size: 12px;
}
.goods_price{
    font-size: 14px;
    color:#F47378;
    width: 100%;
    line-height: 22px;
    height: 22px;
    margin-top: 25px;
}
.cart{
    position: absolute;
    right: 10px;
    bottom:10px;
}
.cart image{
    width: 20px;
    height: 20px;
}